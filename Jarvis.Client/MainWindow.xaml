<Window x:Class="Jarvis.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" DataContext="MainWindowVM">
    <DockPanel VerticalAlignment="Top" LastChildFill="True">
        <TextBox DockPanel.Dock="Top" x:Name="input" KeyUp="Input_OnKeyUp"></TextBox>
        <ScrollViewer>
            <ItemsControl x:Name="Results">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel IsItemsHost="True" Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>